{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/tobacco/src",
  "monorepo": true,
  "root": "apps/tobacco",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "tobacco": {
      "type": "application",
      "root": "apps/tobacco",
      "entryFile": "main",
      "sourceRoot": "apps/tobacco/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tobacco/tsconfig.app.json"
      }
    },
    "iam": {
      "type": "application",
      "root": "apps/iam",
      "entryFile": "main",
      "sourceRoot": "apps/iam/src",
      "compilerOptions": {
        "tsConfigPath": "apps/iam/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}
